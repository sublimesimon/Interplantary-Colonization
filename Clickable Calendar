      display: none;
    }

    .step-container.active {
      display: block;
    }

    .step-title {
      font-weight: bold;
      margin-bottom: 10px;
    }

    .form-field {
      margin-bottom: 15px;
    }

    .form-field label {
      display: block;
      font-weight: bold;
      margin-bottom: 5px;
    }

    .form-field input,
    .form-field select {
      width: 100%;
      padding: 8px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .step-actions {
      margin-top: 20px;
      display: flex;
      justify-content: space-between;
